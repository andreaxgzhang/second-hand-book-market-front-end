
  <view class="header">
  <view class="h2-header">Submit your Restaurant</view>
  </view>
  <view class="container">
  <view class="wrap">
  
    <form bindsubmit="bindSubmit">

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{posts.title}}" style="input-size"placeholder="Title" class="input-height" name="title" maxlength="-1" auto-height />
      </view>
    </view>

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{posts.description}}" style="input-size"placeholder="Description" class="input-height" name="description" maxlength="-1" auto-height />
      </view>
    </view>

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{posts.professor}}" style="input-size"placeholder="Professor" class="input-height" name="professor" maxlength="-1" auto-height />
      </view>
    </view>

    <view class="user-input">
      <view class="text-area-wrap">
      <textarea value="{{posts.course_number}}" style="input-size"placeholder="Course Number" class="input-height" name="course_number" maxlength="-1" auto-height />
      </view>
    </view>

    <button  style="margin-bottom:50px "type="primary" form-type="submit" loading="{{loading}}">Submit</button>
    </form>

  </view>
  </view>
