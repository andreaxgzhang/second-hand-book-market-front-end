.banner {
  color: white;
  text-align: center;
  height: 100vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner .h1 {
  font-size: 40px;
  font-weight: bold;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
}
.banner-content {
  margin: 0 auto 40vh auto;
}
button {
  width:100%;
  text-transform:uppercase;
  border:2px solid #0099cc;
  color:#0099cc;
  background:none;
  color:white;
  border:black;
  position: relative;
  top: 10vh;
}
.new-line {
  display: block;
  position: absolute;
  left: 1vw;
  right: 25vw;
}
.new-line-2 {
  display: block;
}
.placeholder {
  border-bottom: 1px solid white;
  width: 30vw;
  font-size: 22px;
  position: absolute;
  right: 17vw;
  margin-top: 2.5vh;
}