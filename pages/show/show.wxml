<view class = "container">
  <view class="box">
    <view class="product-pic" style="background-image: url('{{photo}}');background-size: cover;"></view>
    <view class="controls">
      <!-- <image src="/images/edit.svg" class="icon" bindtap="editRestaurant" data-id="{{id}}" />
      <image src="/images/delete-button.svg" class="icon" bindtap="deleteRestaurant" data-id="{{id}}" /> -->
