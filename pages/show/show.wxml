
<view class = "container">
  <view>
    <image class="product-pic" src="https://images-na.ssl-images-amazon.com/images/I/51-ZPdoxkdL._SX412_BO1,204,203,200_.jpg" />
  </view>

    <view class="description">
    <text class ='p'>{{title}} \n</text>
    <text class ='p'>Class no. : {{course_number}} \n</text>
    <text class ='p'>Condition: {{description}} \n</text>
    <text class ='p'>Professor: Dr. {{professor}} \n</text>
    <text class ='p'>Asking price: ${{price}} \n</text>
    <text class ='p'>ID : ${{id}} \n</text>

    </view>

      <view class="controls">
          <image src="/images/random.png" class="icon" bindtap="editRestaurant" data-id="{{id}}" />
          <image src="/images/recycling-bin.png" class="icon" bindtap="deleteRestaurant" data-id="{{id}}" />
      </view>


</view>
