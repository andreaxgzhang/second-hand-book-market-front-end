      <text class ='p'>Professor: Dr. {{professor}} \n</text>
      <text class ='p'>ID : ${{id}} \n</text>
    </view>
    </view>
 
    <button class="btn" bindtap='onClick' open-type="getUserInfo" bindgetuserinfo="getUserInfo" form-type="submit" data-id="{{id}}" loading="{{loading}}" bindtap="modalcnt">Confirm</button>
</view>

