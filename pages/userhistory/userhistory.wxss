view , page {
  padding: 0px;
  margin: 0px;
}

.page {
  height: 100%;
}

.navbar {
    display: flex;
    position: absolute;
    z-index: 500;
    top: 0;
    width:100%;
}

.navbar__item {
    position: relative;
    display: block;
    flex: 1;
    padding: 10rpx 0;
    text-align: center;
    font-size: 0;
    height: 48rpx;
    line-height: 48rpx;
}

.navbar__item_on {
    color: black;
    font-weight: bold;
    border-radius: 3px;
    border-bottom: 2px solid black;
}

.navbar__slider {
    position: absolute;
    display: block;
    content: " ";
    left: 0;
    bottom: 0;
    height: 3px;
    transition: transform .3s;
}

.navbar__title{
    display: inline-block;
    font-size: 15px;
    max-width: 8em;
    text-align: center;
}

swiper {
  height: 100%;
}

swiper-item{
  width: 100%;
  padding-top: 20rpx;
  text-align: center;
}
.post {
  display: flex;
  padding: 20px;
  border-bottom: 2px solid rgba(220, 224,244,0.4);
  align-items: center;
}
.post-body {
  margin: 0 auto;
  padding-bottom: 10px;
  text-align: left;
}
.book-cover {
  width: 90px;
  height: 110px;
  border-radius: 3px;
}
.title {
  font-size: 14px;
  font-weight: bolder;
}
.condition {
  font-size: 12px;
  font-weight: lighter;
  display: block;
}
.status {
  font-size: 10px;
  font-weight: bold;
  color: darkgray;
  opacity: 0.8;
  padding-bottom: 10rpx;
}
.price {
  font-size: 16px;
  font-weight: bolder;
  color: orangered;
  padding-bottom: 10rpx;
}

.user-input {
  width: 300px;
  margin-bottom: 35rpx;
}
.input-height {
  height: 10px;
}
.input-label {
  font-size: 35rpx;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  width: 100%;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
}


.icons {
  display: flex;

}
.icon {
  width: 16px;
  height: 16px;
  padding: 10rpx;
}
.post-info {
  display: flex;
  flex-direction: column;
}